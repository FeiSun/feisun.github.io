---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  <header class="post-header" style="text-align: center;">
    <h1 class="post-title" style="font-weight: 700;">Selected Publications</h1>
    <p class="post-description">{{ page.description }}</p>
  </header>

  <article>
   <p>An up-to-date list is available on <a href="https://scholar.google.com/citations?user=OlRxBhcAAAAJ" rel="external nofollow noopener" target="_blank">Google Scholar</a>.</p>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
