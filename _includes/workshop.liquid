<div class="col">
  <a href="{% if workshop.redirect %}{{ workshop.redirect }}{% else %}{{ workshop.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if workshop.img %}
        {%
          include figure.liquid
          loading="eager"
          path=workshop.img
          sizes = "250px"
          alt="workshop thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ workshop.title }}</h2>
        <p class="card-text">{{ workshop.description }}</p>
      </div>
    </div>
  </a>
</div>
